limit nofile 50000 50000

kill timeout 300 # wait 300s between SIGTERM and SIGKILL.

start on runlevel [2345]
stop on runlevel [06]

script
  start-stop-daemon \
    --start \
    --chuid <%= @user %> \
    --chdir <%= @dir %>/mms-agent \
    --user <%= @user %>
    --background
    --exec  <%= @dir %>/bin/python -- agent.py
end script
